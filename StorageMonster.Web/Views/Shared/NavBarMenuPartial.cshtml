@using StorageMonster.Web.Views.Shared
<ul class="nav pull-right">
    @if (Request.IsAuthenticated) { 
        
        
        <li class="navbar-text">   
            <p>    
                @Resources.LogOnWelcome <b>@HttpContext.Current.User.Identity.Name</b>    
            </p>
        </li>
        <li class="divider-vertical"></li>
        <li>
            @Html.ActionLink(Resources.LogOffLinkContent, "LogOff", "Account")
        </li>
    } else  {
        <li>
        @Html.ActionLink(@Resources.LogOnLinkContent, "LogOn", "Account")
        </li>
    }
</ul>        