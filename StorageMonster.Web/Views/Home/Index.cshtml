@using StorageMonster.Web.Properties.ViewsResources
@{
    ViewBag.Title = HomeResources.IndexTitle;
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}



<div id="mainContent">
</div>


<script type="text/javascript">
    $(document).ready(function() {
        MonsterApp.router = new MonsterApp.Router();
        MonsterApp.TemplateCache[MonsterApp.TemplateNames.MasterViewTmpl] = _.template($(MonsterApp.CssSelectors.MasterViewTemplateId).html());
        MonsterApp.controller = new MonsterApp.BaseController();
        Backbone.history.start();
    });
</script>

<script type="text/template" id="MasterViewTmpl">
    @Html.Partial("~/Views/Templates/MasterTemplate.cshtml")
</script>



