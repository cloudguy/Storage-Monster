@using StorageMonster.Web.Properties.ViewsResources
@using System.Globalization
@model StorageMonster.Web.Models.Account.RegisterModel

<div id="registerContainer">
    <div>
        <h2>@AccountResources.CreateNewAccount</h2>
    </div>
    <p>
        @String.Format(CultureInfo.CurrentCulture, AccountResources.PasswordRequirementFormat, Model.MinPasswordLength)
        <br/>
        @AccountResources.NameRequirement
    </p>

    @Html.Partial("~/Views/Shared/Controls/MessagesControl.cshtml", AccountResources.RegisterValidationSummary)
 
    <div class="well">
        @using (Html.BeginForm()) {
            <fieldset>
                <legend>@AccountResources.AccountInfoTitle</legend>
                <p>                        
                    @Html.LabelFor(model => model.UserName)                               
                    @Html.TextBoxFor(model => model.UserName, new { @class = "input-block-level" })
                    @Html.ValidationMessageFor(model=>model.UserName)                
                </p>  
                <p>
                    @Html.LabelFor(model => model.Email)                             
                    @Html.TextBoxFor(model => model.Email, new { @class = "input-block-level" })
                    @Html.ValidationMessageFor(model=>model.Email)
                </p>
                <p>
                    @Html.LabelFor(model => model.Password)                         
                    @Html.PasswordFor(model => model.Password, new { @class = "input-block-level" })
                    @Html.ValidationMessageFor(model=>Model.Password)
                </p>
                <p>
                    @Html.LabelFor(model => model.ConfirmPassword)                      
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input-block-level" })
                    @Html.ValidationMessageFor(model=>model.ConfirmPassword)
                </p>
                <p>
                    @Html.LabelFor(model => model.Locale)
                    @Html.DropDownListFor(model => model.Locale, Model.SupportedLocales, new { @class = "input-block-level" })                
                    @Html.ValidationMessageFor(model=>model.Locale)
                </p>
                <p>
                    @Html.LabelFor(model => model.TimeZone)
                    @Html.DropDownListFor(model => model.TimeZone, Model.SupportedTimeZones, new { @class = "input-block-level" })                  
                    @Html.ValidationMessageFor(model=>model.TimeZone)
                </p>                
                <p>
                    <input type="submit" class="btn" value="@AccountResources.RegisterButtonText" />
                </p>
            </fieldset>
        }      
    </div>
</div>