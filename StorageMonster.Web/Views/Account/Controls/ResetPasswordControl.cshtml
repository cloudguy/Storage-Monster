@using System.Globalization
@using StorageMonster.Web.Services.Security
@using StorageMonster.Web.Views.Account
@model StorageMonster.Web.Models.Account.ResetPasswordModel

<div id="resetPasswordControl">
    @Html.Partial("~/Views/Shared/Controls/MessagesControl.cshtml", @Resources.ResetPasswordValidationSummary)

    @if (Model != null) { 
        <div class="well">
            @using(Html.BeginForm()) {         
                <fieldset>    
                    <legend>@Resources.ResetPasswordTitle</legend> 
                    <p>
                        @String.Format(CultureInfo.CurrentCulture, Resources.PasswordRequirementFormat, Model.MinPasswordLength)
                    </p>            
           
                    <p>                        
                        @Html.LabelFor(model => model.NewPassword)                              
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "input-block-level" })
                        @Html.ValidationMessageFor(model => model.NewPassword)                 
                    </p> 
                    <p>                        
                        @Html.LabelFor(model => model.ConfirmNewPassword)                              
                        @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "input-block-level" })
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)               
                    </p> 
                    <p>
                        @Html.HiddenFor(model=>model.Token)
                        @Html.AntiForgeryToken(AntiForgerySalts.ResetPassword)
                        <input type="submit" class="btn" value="@Resources.ResetPasswordButtonText" />
                    </p>
                </fieldset>
            } 
        </div>
    } 
</div>
