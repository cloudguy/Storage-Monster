@using CloudBin.Web.Core.Html
@model CloudBin.Web.UI.Models.Account.RegisterModel
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@section Scripts{
    @Html.CloudBin().RenderScriptBundle("jquerycommon.js")
}

@section Styles{
    @Html.CloudBin().RenderDefaultThemeBundle()
}

<div>

        @using(Html.BeginForm("Register", "Account", FormMethod.Post))
        {
        <p>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "input k-textbox" })
            @Html.ValidationMessageFor(m=>m.UserName)
        </p>
        <p>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "input k-textbox" })
            @Html.ValidationMessageFor(m => m.Email)
        </p>
        <input type="submit" value="Register" />
        }

    </div>
